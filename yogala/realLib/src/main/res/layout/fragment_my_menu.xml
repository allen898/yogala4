<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige"
    tools:context=".MainActivity"
    android:id="@+id/lyt_my_menu">

    <TextView
        android:id="@+id/txt_my_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/my_menu"
        android:textColor="@color/brown1"
        android:textSize="50dp"
        app:layout_constraintBottom_toTopOf="@+id/img_theme_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.659" />

    <ImageView
        android:id="@+id/img_theme_background"
        android:layout_width="345dp"
        android:layout_height="455dp"
        android:background="@drawable/logo_rectangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_rectangle" />

    <Spinner
        android:id="@+id/spinner_menu"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_marginTop="44dp"
        android:background="@color/beige"
        android:textColor="@color/brown1"
        android:textSize="25dp"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toEndOf="@+id/img_theme_background"
        app:layout_constraintStart_toStartOf="@+id/img_theme_background"
        app:layout_constraintTop_toTopOf="@+id/img_theme_background"
        />

    <ImageView
        android:id="@+id/img_course_introduction_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="@+id/spinner_menu"
        app:layout_constraintStart_toStartOf="@+id/spinner_menu"
        app:layout_constraintTop_toBottomOf="@+id/spinner_menu"
        app:srcCompat="@drawable/course_rectangle" />
    <TextView
        android:id="@+id/txt_course_introduction_name1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/course_name"
        android:textColor="@color/brown"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="@+id/img_course_introduction_background"
        app:layout_constraintHorizontal_bias="0.143"
        app:layout_constraintStart_toStartOf="@+id/img_course_introduction_background"
        app:layout_constraintTop_toTopOf="@+id/img_course_introduction_background" />

    <TextView
        android:id="@+id/txt_course_introduction_content1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/course_introduction"
        android:textColor="@color/brown"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/txt_course_introduction_name1"
        app:layout_constraintTop_toBottomOf="@+id/txt_course_introduction_name1" />

    <Button
        android:id="@+id/btn_wake_up"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginTop="36dp"
        android:background="@color/beige"
        android:text="@string/btn_enter_course1"
        android:textColor="@color/brown1"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="@+id/img_course_introduction_background"
        app:layout_constraintStart_toStartOf="@+id/img_course_introduction_background"
        app:layout_constraintTop_toBottomOf="@+id/img_course_introduction_background" />

</androidx.constraintlayout.widget.ConstraintLayout>