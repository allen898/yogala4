<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/img_achievement_background"
        android:layout_width="301dp"
        android:layout_height="190dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.269"
        app:srcCompat="@drawable/course_rectangle" />

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/pieChart"
        android:layout_width="147dp"
        android:layout_height="142dp"
        app:layout_constraintBottom_toBottomOf="@+id/img_achievement_background"
        app:layout_constraintEnd_toEndOf="@+id/img_achievement_background"
        app:layout_constraintHorizontal_bias="0.902"
        app:layout_constraintStart_toStartOf="@+id/img_achievement_background"
        app:layout_constraintTop_toTopOf="@+id/img_achievement_background"
        app:layout_constraintVertical_bias="0.75" />

    <TextView
        android:id="@+id/txt_my_achievement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="216dp"
        android:text="@string/my_achievement"
        android:textColor="@color/brown1"
        android:textSize="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/img_achievement_background"
        app:layout_constraintEnd_toEndOf="@+id/img_achievement_background"
        app:layout_constraintStart_toStartOf="@+id/img_achievement_background"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_share"
        android:layout_width="214dp"
        android:layout_height="46dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/share"
        app:layout_constraintEnd_toEndOf="@+id/img_achievement_background"
        app:layout_constraintStart_toStartOf="@+id/img_achievement_background"
        app:layout_constraintTop_toBottomOf="@+id/img_achievement_background" />

    <TextView
        android:id="@+id/txt_this_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/this_week_achievement"
        android:textColor="@color/brown1"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/img_achievement_background"
        app:layout_constraintEnd_toEndOf="@+id/img_achievement_background"
        app:layout_constraintHorizontal_bias="0.114"
        app:layout_constraintStart_toStartOf="@+id/img_achievement_background"
        app:layout_constraintTop_toTopOf="@+id/img_achievement_background"
        app:layout_constraintVertical_bias="0.153" />


</androidx.constraintlayout.widget.ConstraintLayout>
