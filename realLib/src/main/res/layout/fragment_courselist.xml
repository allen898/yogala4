<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_course_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="@string/course_list"
        android:textColor="@color/brown1"
        android:textSize="50dp"
        app:layout_constraintBottom_toTopOf="@+id/img_theme_background"
        app:layout_constraintEnd_toEndOf="@+id/img_theme_background"
        app:layout_constraintStart_toStartOf="@+id/img_theme_background" />

    <ImageView
        android:id="@+id/img_theme_background"
        android:layout_width="300dp"
        android:layout_height="430dp"
        android:background="@drawable/logo_rectangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.72"
        app:srcCompat="@drawable/logo_rectangle" />

    <Button
        android:id="@+id/btn_back_pain"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_marginBottom="32dp"
        android:background="@color/beige"
        android:text="@string/back_pain"
        android:textColor="@color/brown1"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/img_theme_background"
        app:layout_constraintEnd_toEndOf="@+id/img_theme_background"
        app:layout_constraintStart_toStartOf="@+id/img_theme_background"
        app:layout_constraintTop_toTopOf="@+id/img_theme_background"
        app:layout_constraintVertical_bias="0.126" />

    <Button
        android:id="@+id/btn_arm_pain"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="@color/beige"
        android:text="@string/arm_pain"
        android:textColor="@color/brown1"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="@+id/btn_back_pain"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_back_pain"
        app:layout_constraintTop_toBottomOf="@+id/btn_back_pain" />

    <Button
        android:id="@+id/btn_butt_pain"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="@color/beige"
        android:text="@string/butt_pain"
        android:textColor="@color/brown1"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="@+id/btn_arm_pain"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_arm_pain"
        app:layout_constraintTop_toBottomOf="@+id/btn_arm_pain" />
</androidx.constraintlayout.widget.ConstraintLayout>